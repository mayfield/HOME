#!/bin/sh -e

. .recordscreen-rc

FPS=30

INFO=$(xrandr | grep primary | awk '{print $4}')
W=$(echo "$INFO" | awk -Fx '{print $1}')
H=$(echo "$INFO" | awk -Fx '{print $2}' | awk -F+ '{print $1}')
X=$(echo "$INFO" | awk -F+ '{print $2}')
Y=$(echo "$INFO" | awk -F+ '{print $3}')

if [ "$1" == "audio" ] ; then
    AUDIO=1
fi

record screen $FPS $W $H $X $Y "$AUDIO" -crf 22
