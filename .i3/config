exec picom \
    --corner-radius 10 \
    --shadow \
    --shadow-radius 20 \
    --shadow-opacity .2 \
    --shadow-offset-x -14 \
    --shadow-offset-y -14 \
    --shadow-exclude 'window_type *= "splash"'
exec hsetroot -solid black
exec xset +dpms
exec xset dpms 300 600 3600
exec keyboardsetup
exec xfce4-session
